@model IEnumerable<Task4AppMvc.Models.User>

@{
    ViewBag.Title = "UserGrid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UserGrid</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
